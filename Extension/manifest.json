{
    "manifest_version": 2,
    "name": "Lichess Multi Premoves",
    "description": "Lichess Multi Premoves",
    "version": "0.0.0.1",
    "browser_action": {
        "default_title": "Settings",
        "default_popup": "UI.html"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "settings.js",
            "background.js"
        ]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://lichess.org/*",
        "https://lichess.dev/*",
        "https://mskchess.ru/*",
        "debugger",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://lichess.org/*",
                "https://lichess.dev/*",
                "https://mskchess.ru/*"
            ],
            "js": [
                "settings.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "settings.js",
        "chess.js",
        "script.js"
    ]
}